@page
@using Cotur.Abp.ApiKeyAuthorization.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Cotur.Abp.ApiKeyAuthorization.Web.Pages.ApiKeys.CreateModal

@inject IHtmlLocalizer<ApiKeyAuthorizationResource> L
@{
    Layout = null;
}

@section scripts {
    <abp-script src="/Pages/ApiKeys/createModal.js" />
}
<style>
    #XSense {
        display: flex;
        justify-content: space-between;
        align-content: center;
    }
</style>

<form data-ajaxForm="true" autocomplete="off" asp-page="/ApiKeys/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewApiKey"].Value"></abp-modal-header>

        <abp-modal-body>

            <abp-input asp-for="ApiKey.Name" />
            <abp-input asp-for="ApiKey.Key" />
            <abp-input asp-for="ApiKey.ExpireAt" type="date" label="Expire Set"/>
   @*         <abp-input asp-for="ApiKey.ExpireAt" type="text" class="datepicker" label="Expire Set" />*@
            <div id="XSense">
                <abp-input asp-for="ApiKey.Active" />
                <abp-input asp-for="ApiKey.XSense_Cpp" label="XSense CPP" />
            </div>
            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
